@model IEnumerable<MSACSDegreePlanner.Models.DegreePlan>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by DegreePlanName/Abbrevation name: <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DegreePlanName"]">@Html.DisplayNameFor(model => model.DegreePlanId)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DegreePlanAbrev"]">@Html.DisplayNameFor(model => model.DegreePlanAbrev)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DegreePlanName"]">@Html.DisplayNameFor(model => model.DegreePlanName)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Degree.DegreeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student.StudentId)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DegreePlanId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DegreePlanAbrev)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DegreePlanName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DegreeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DegreePlanId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DegreePlanId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DegreePlanId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
